{% extends "base.html.twig" %}

{% block body %}
    <div class="container heading">
        {% if not user.candidate %}
            <a href="{{ path('user_candidate') }}" class="text-center btn btn-block">Participer au casting</a>
        {% endif %}
        <h1 class="text-center">Mon profil</h1>
        <div class="row">
            <div class="col-md-3">
                {% if user.candidate %}
                    <img
                        src="{{ asset('uploads/') ~ user.candidate.portrait.filename }}"
                        alt=""
                        class="img-thumbnail"
                    >
                {% endif %}
            </div>
            <div class="col-md-9 text-center">
                <div class="row">
                    <div class="col-3">Nom :</div>
                    <div class="col-9">{{ user.lastName }}</div>
                </div>
                <div class="row">
                    <div class="col-3">Pr√©nom :</div>
                    <div class="col-9">{{ user.firstName }}</div>
                </div>
                <div class="row">
                    <div class="col-3">E-mail :</div>
                    <div class="col-9">{{ user.email }}</div>
                </div>
            </div>
        </div>
        {% if user.candidate %}
            <h2 class="text-center">Ma candidature</h2>
            <div class="row">
                <div class="col-md-3">
                    <img
                        src="{{ asset('uploads/') ~ user.candidate.fullBody.filename }}"
                        alt=""
                        class="img-thumbnail"
                    >
                </div>
                <div class="col-md-9">
                    <div class="row">
                        <div class="col-6">
                            <div class="row">
                                <div class="col-3">Cheveux :</div>
                                <div class="col-9">{{ user.candidate.hair.label }}</div>
                            </div>
                            <div class="row">
                                <div class="col-3">Yeux :</div>
                                <div class="col-9">{{ user.candidate.eye.label }}</div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="row">
                                <div class="col-3">Taille :</div>
                                <div class="col-9">{{ user.candidate.size }}</div>
                            </div>
                            <div class="row">
                                <div class="col-3">Langue :</div>
                                <div class="col-9">{{ user.candidate.language.label }}</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}