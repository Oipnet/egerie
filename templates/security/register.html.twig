{% extends "base.html.twig" %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                {{ form_start(form) }}
                    <fieldset>
                        <legend class="text-center">Cr√©er votre compte</legend>
                        <div class="row">
                            <div class="col-md-6 col-sm-12">
                                <div class="md-form">
                                    {{ form_widget(form.email) }}
                                </div>
                                <div class="md-form">
                                    {{ form_widget(form.last_name) }}
                                </div>
                                <div class="md-form">
                                    {{ form_widget(form.first_name) }}
                                </div>
                                <div class="md-form">
                                    {{ form_widget(form.birth_date) }}
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-12">
                                <div class="md-form">
                                    {{ form_widget(form.zip_code) }}
                                </div>
                                <div class="md-form">
                                    {{ form_widget(form.city) }}
                                </div>
                                <div class="md-form">
                                    {{ form_widget(form.phone) }}
                                </div>
                            </div>
                        </div>
                        <div class="md-form">
                            {{ form_widget(form.plainPassword.first) }}
                        </div>
                        <div class="md-form">
                            {{ form_widget(form.plainPassword.second) }}
                        </div>
                    </fieldset>
                    <button class="btn btn-secondary btn-block">S'inscrire</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
