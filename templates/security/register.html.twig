{% extends "base.html.twig" %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-9 offset-3">
                {{ form_start(form) }}
                    <fieldset>
                        <legend>Créer votre compte</legend>
                        <div class="form-group">
                            {{ form_label(form.email, 'Email') }}
                            {{ form_widget(form.email) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.last_name, 'Nom') }}
                            {{ form_widget(form.last_name) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.first_name, 'Prénom') }}
                            {{ form_widget(form.first_name) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.zip_code, 'Code postal') }}
                            {{ form_widget(form.zip_code) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.city, 'Ville') }}
                            {{ form_widget(form.city) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.birth_date, 'Date de naissance') }}
                            {{ form_widget(form.birth_date) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.phone, 'Téléphone') }}
                            {{ form_widget(form.phone) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.plainPassword.first, 'Mot de passe') }}
                            {{ form_widget(form.plainPassword.first) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.plainPassword.second, 'Confirmer') }}
                            {{ form_widget(form.plainPassword.second) }}
                        </div>
                    </fieldset>
                    <button class="btn btn-secondary btn-block">S'inscrire</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
